<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout & see cart</title>
    <link rel="stylesheet" href="/cart.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    
    <div class="container">
        <div class="cart">
            <h1>Food Cart</h1>
            <% for(let i=0;i<cartItems.length;i++){ %>
                <div class="cartPdt">
                    <div class="image">
                        <img src="<%= cartItems[i].pdtImg %>" alt="">
                    </div>
                    <div class="other_part">
                        <h2><%= cartItems[i].pdtName %></h2>
                        <p>Quantity: <%= cartItems[i].pdtQt %></p>
                        <p>Amount: <%= Number(cartItems[i].pdtPrice) * Number(cartItems[i].pdtQt) %></p>
                        <form action="/removefromCart" method="post">
                            <input type="hidden" name="removeId" value="<%= i %>">
                            <button type="submit" class="btn btn-danger" style="background-color: orangered;">Remove from cart</button>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>

        <div class="checkout">
            <h1>Price Details</h1>
            <hr class="hr">
            <h2>Price (<%= cartItems.length %> items)</h2>
            <div class="discount">
                <h2>Discount</h2>
                <p>Rs.0</p>
            </div>
            <div class="delivery">
                <h2>Delivery Charges</h2>
                <p>Rs.0</p>
            </div>
            <hr>
            <div class="total">
                <h2>Total Amount</h2>
                <p id="total_amt">Rs.<%= totalAmt %></p>
            </div>
            <hr class="hr">
            <p id="save">You will save Rs.0 on this order</p>
            <div class="btns">
                <button type="submit" class="btn btn-danger" style="background-color: orangered;" onclick="window.location.href='/addmore'">Add More</button>
                <form action="/create/orderId" method="post">
                    <input type="hidden" name="amount" value="<%= totalAmt %>">
                    <button type="submit" class="btn btn-danger" style="background-color: orangered;">Proceed to Pay</button>
                </form>
            </div>
        </div>
    </div>
    

</body>
</html>