<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>See Product</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/seepdt.css">
</head>
<body>

    <h1>Buy the best deals on Foodie!</h1>
    
    <div class="bigCont">
        <div class="container">
            <div class="image">
                <img name="pdtImg" src="<%= pdt.image_url %>" alt="">
            </div>
            <div class="other_part">
                <h2 name="pdtName"><%= pdt.name %></h2>
                <p name="pdtDesc"><%= pdt.description %></p>
                <div class="quantity">
                    <img id="dec" src="/images/minus.png" alt="">
                    <p id="qt" name="pdtQt">0</p>
                    <img id="inc" src="/images/plus.png" alt="">
                    <p name="pdtPrice">Rs.<%= pdt.price %> for one</p>
                </div>
                <!-- <button type="button" class="btn btn-danger" style="background-color: orangered;" onclick="window.location.href='/addtoCart'">Add to List</button> -->

                <form action="/addtoCart" method="POST">
                    <input type="hidden" name="pdtImg" value="<%= pdt.image_url %>">
                    <input type="hidden" name="pdtName" value="<%= pdt.name %>">
                    <input type="hidden" name="pdtDesc" value="<%= pdt.description %>">
                    <input type="hidden" id="pdtQt" name="pdtQt" value="1">
                    <input type="hidden" name="pdtPrice" value="<%= pdt.price %>">
                    <button type="submit" class="btn btn-danger" style="background-color: orangered;">Add to List</button>
                </form>

            </div>
        </div>
    </div>

    <form class="checkout_btn" method="post" action="/gotoCart">
        <button type="submit"  class="btn btn-danger" style="background-color: orangered;">Go to Cart</button>
    </form>

    <script>
        let decBtn = document.querySelector("#dec");
        let incBtn = document.querySelector("#inc");
        let val = document.querySelector("#qt");
        let x = document.querySelector("#pdtQt");

        let cnt = 0;
        decBtn.addEventListener("click",()=>{
            cnt--;
            if(cnt < 0){
                cnt = 0;
            }
            val.innerHTML = cnt;
            x.value = cnt;
        })
        incBtn.addEventListener("click",()=>{
            cnt++;
            val.innerHTML = cnt;
            x.value = cnt;
        })
    </script>

</body>
</html>